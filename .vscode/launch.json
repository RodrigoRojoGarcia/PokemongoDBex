    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Compilar (en casa) y lanzar",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "buildtsc"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Compilar (en clase) y lanzar",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "buildnotsc"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Lanzar sin compilar",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}"
        }
    ]
